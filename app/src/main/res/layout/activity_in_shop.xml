<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/pieChart"
        android:layout_width="403dp"
        android:layout_height="259dp"
        android:layout_marginTop="8dp"
        android:background="#3EB3FF00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Pie Chart Goes Here" />
    </FrameLayout>

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:onClick="scanItem"
        android:text="Scan Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDisplay" />

    <LinearLayout
        android:id="@+id/productDisplay"
        android:layout_width="388dp"
        android:layout_height="190dp"
        android:layout_marginTop="8dp"
        android:background="#1E3FB5A3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Product Name and Price is displayed here after Scanning" />

        <TextView
            android:id="@+id/productNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/productQuantityDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/productPriceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="403dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="76dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/productDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/quantityLabel"
            android:layout_width="70dp"
            android:layout_height="46dp"
            android:layout_margin="10sp"
            android:baselineAligned="true"
            android:gravity="center"
            android:text="Quantity"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/editQuantity"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_margin="10sp"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"

            android:onClick="clearText"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_margin="10sp"
            android:baselineAligned="true"
            android:text=""
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonAddCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:baselineAligned="true"
            android:onClick="AddToCart"
            android:text="Add to Cart"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCheckOut"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="checkOut"
        android:text="Check Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toEndOf="@+id/auto_focus"
        app:layout_constraintTop_toBottomOf="@+id/productDisplay"
        app:layout_constraintVertical_bias="0.176" />

    <ProgressBar
        android:id="@+id/background_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="336dp"
        android:layout_height="270dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/stats_full"
        app:layout_constraintBottom_toBottomOf="@+id/stats_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ProgressBar that represents a chart slice, where "android:progress" is the % value of the slice
    android:progress="75"-->
    <ProgressBar
        android:id="@+id/stats_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/stats_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/total_budget"
        android:layout_width="171dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/background_progressbar"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stats_progressbar"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/auto_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/auto_focus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonScan"
        app:layout_constraintTop_toBottomOf="@+id/productDisplay"
        app:layout_constraintVertical_bias="0.176" />


</android.support.constraint.ConstraintLayout>